<?xml version="1.0" encoding="EUC-KR"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mapper.login">
	<select id="loginCall" parameterType="map" resultType="map">
		select mem_name,mem_id,mem_companyname,mem_position  
		from member
		<where>
		<if test="mem_email!=null">
					AND mem_id = #{mem_id}
		</if>
		<if test="mem_pw!=null">
			        AND mem_pw = #{mem_pw}
		</if>
		</where>
	</select>
	
	<insert id="signUp" parameterType="java.util.Map">
		INSERT INTO memeber
		      VALUES(#{mem_id}, #{mem_name}, #{mem_pw}, #{mem_hp},#{mem_zipcode}, #{mem_addr}, #{mem_dept})
	
	</insert>
</mapper>